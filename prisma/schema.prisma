// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum categoryEnum {
  Personal
  Work
  Home
  Goal
}

model Note {
  id        String       @id @default(cuid())
  title     String
  category  categoryEnum
  content   String
  createdAt DateTime
  updatedAt DateTime
}
